---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PageHero from '../../components/PageHero.astro';
import { getCollection, render } from 'astro:content';
import { formatDate } from '../../utils/date';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} - Astro Nightwalk`} description={post.data.description}>
  <Header />

  <main class="pt-20">
    <PageHero backLink={{ href: '/blog', label: 'Back to Blog' }}>
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">{post.data.title}</h1>
      <div class="flex flex-wrap items-center gap-4 text-white/60">
        <time datetime={post.data.date.toISOString()}>
          {formatDate(post.data.date, 'en-US')}
        </time>
        {post.data.tags.length > 0 && (
          <>
            <span>â€¢</span>
            <div class="flex gap-2">
              {post.data.tags.map((tag) => (
                <a
                  href={`/tags/${tag}`}
                  class="text-nightwalk-orange hover:underline"
                >
                  #{tag}
                </a>
              ))}
            </div>
          </>
        )}
      </div>
    </PageHero>

    <!-- Article Content -->
    <section class="py-16 bg-nightwalk-dark">
      <div class="container mx-auto px-4">
        <article class="max-w-3xl mx-auto prose prose-invert prose-lg">
          <Content />
        </article>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  @import '../../styles/article-styles.css';
</style>
