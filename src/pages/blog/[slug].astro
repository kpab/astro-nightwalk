---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export function getStaticPaths() {
  const posts: Record<string, { title: string; date: string; content: string }> = {
    'getting-started': {
      title: 'Getting Started with Astro Nightwalk',
      date: '2024-12-25',
      content: `
        <p>Welcome to Astro Nightwalk! This guide will help you get started with our beautiful Three.js night city walkthrough theme.</p>

        <h2>Installation</h2>
        <p>Clone the repository and install dependencies:</p>
        <pre><code>npm install</code></pre>

        <h2>Development</h2>
        <p>Start the development server:</p>
        <pre><code>npm run dev</code></pre>

        <h2>Configuration</h2>
        <p>Edit <code>src/config/nightwalk.config.ts</code> to customize the cityscape.</p>
      `,
    },
    'customizing-the-cityscape': {
      title: 'Customizing the Cityscape',
      date: '2024-12-20',
      content: `
        <p>The cityscape is fully customizable through the configuration file.</p>

        <h2>Building Configuration</h2>
        <p>Adjust the number of buildings, their heights, and spacing.</p>

        <h2>Lighting</h2>
        <p>Change the sun color, intensity, and position for different moods.</p>

        <h2>Sky Colors</h2>
        <p>Modify the gradient colors to create sunrise, sunset, or night scenes.</p>
      `,
    },
    'performance-tips': {
      title: 'Performance Tips for Three.js',
      date: '2024-12-15',
      content: `
        <p>Optimize your Three.js scenes for better performance across all devices.</p>

        <h2>Reduce Polygon Count</h2>
        <p>Use simpler geometries where possible.</p>

        <h2>Texture Optimization</h2>
        <p>Use appropriately sized textures and enable mipmapping.</p>

        <h2>Visibility Culling</h2>
        <p>Only render what's visible in the viewport.</p>
      `,
    },
  };

  return Object.entries(posts).map(([slug, post]) => ({
    params: { slug },
    props: { post },
  }));
}

interface Props {
  post: {
    title: string;
    date: string;
    content: string;
  };
}

const { post } = Astro.props;
---

<BaseLayout title={`${post.title} - Astro Nightwalk`}>
  <Header />

  <main class="pt-20">
    <!-- Article Header -->
    <section class="bg-gradient-to-b from-nightwalk-dark to-nightwalk-purple py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-white/60 hover:text-white mb-6 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Blog
          </a>
          <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">{post.title}</h1>
          <time class="text-white/60" datetime={post.date}>
            {new Date(post.date).toLocaleDateString('ja-JP', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </time>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <section class="py-16 bg-nightwalk-dark">
      <div class="container mx-auto px-4">
        <article class="max-w-3xl mx-auto prose prose-invert prose-lg">
          <div set:html={post.content} />
        </article>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  article :global(h2) {
    @apply text-2xl font-bold text-white mt-8 mb-4;
  }

  article :global(p) {
    @apply text-white/80 mb-4;
  }

  article :global(pre) {
    @apply bg-white/10 rounded-lg p-4 overflow-x-auto mb-4;
  }

  article :global(code) {
    @apply text-nightwalk-orange;
  }

  article :global(pre code) {
    @apply text-white/90;
  }
</style>
