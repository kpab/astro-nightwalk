---
// PageHero.astro - 各ページ用の共通ヒーローセクション
interface Props {
  title: string;
  description?: string;
  backLink?: {
    href: string;
    label: string;
  };
  containerClass?: string;
}

const { title, description, backLink, containerClass = 'container mx-auto px-4' } = Astro.props;
---

<section class="bg-gradient-to-b from-nightwalk-dark to-nightwalk-purple py-20">
  <div class={containerClass}>
    {backLink && (
      <a
        href={backLink.href}
        class="inline-flex items-center gap-2 text-white/60 hover:text-white mb-6 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
        {backLink.label}
      </a>
    )}
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">{title}</h1>
    {description && (
      <p class="text-xl text-white/80 max-w-2xl">
        {description}
      </p>
    )}
    <slot />
  </div>
</section>
