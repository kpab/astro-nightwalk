---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { siteConfig } from '../config/site.config';

// スキル一覧（カスタマイズ可能）
const skills = [
  { name: 'TypeScript', category: 'Language' },
  { name: 'React', category: 'Frontend' },
  { name: 'Next.js', category: 'Framework' },
  { name: 'Astro', category: 'Framework' },
  { name: 'Three.js', category: 'Graphics' },
  { name: 'Node.js', category: 'Backend' },
  { name: 'Tailwind CSS', category: 'Styling' },
  { name: 'PostgreSQL', category: 'Database' },
];

// 経歴（カスタマイズ可能）
const experience = [
  {
    title: 'Senior Developer',
    company: 'Tech Company',
    period: '2022 - Present',
    description: 'Leading frontend development and 3D web experiences.',
  },
  {
    title: 'Full Stack Developer',
    company: 'Startup Inc.',
    period: '2020 - 2022',
    description: 'Built scalable web applications with React and Node.js.',
  },
  {
    title: 'Frontend Developer',
    company: 'Agency Co.',
    period: '2018 - 2020',
    description: 'Created responsive websites and interactive experiences.',
  },
];
---

<BaseLayout title={`About - ${siteConfig.name}`}>
  <Header />

  <main id="main-content" class="pt-20">
    <!-- Hero Section with Profile -->
    <section class="bg-gradient-to-b from-nightwalk-dark to-nightwalk-purple py-20">
      <div class="section-container">
        <div class="max-w-4xl mx-auto flex flex-col md:flex-row items-center gap-8">
          <!-- Avatar Placeholder -->
          <div class="w-32 h-32 md:w-40 md:h-40 rounded-full bg-white/10 flex items-center justify-center flex-shrink-0" role="img" aria-label="プロフィール画像">
            <svg class="w-16 h-16 text-white/30" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </div>

          <div class="text-center md:text-left">
            <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
              {siteConfig.author.name}
            </h1>
            <p class="text-xl text-nightwalk-orange mb-4">
              {siteConfig.title}
            </p>
            <p class="text-lg text-white/80 max-w-xl">
              {siteConfig.author.bio}
            </p>

            <!-- Social Links -->
            <div class="flex justify-center md:justify-start gap-4 mt-6">
              {siteConfig.social.github && (
                <a
                  href={siteConfig.social.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-white/60 hover:text-white transition-colors p-2 rounded-lg hover:bg-white/10"
                  aria-label="GitHub"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                  </svg>
                </a>
              )}
              {siteConfig.social.twitter && (
                <a
                  href={siteConfig.social.twitter}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-white/60 hover:text-white transition-colors p-2 rounded-lg hover:bg-white/10"
                  aria-label="Twitter"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                  </svg>
                </a>
              )}
              {siteConfig.social.linkedin && (
                <a
                  href={siteConfig.social.linkedin}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-white/60 hover:text-white transition-colors p-2 rounded-lg hover:bg-white/10"
                  aria-label="LinkedIn"
                >
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills Section -->
    <section class="py-16 bg-nightwalk-dark">
      <div class="section-container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl font-bold text-white mb-8">Skills</h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {
              skills.map((skill) => (
                <div class="card-hover bg-white/5 rounded-lg p-4 border border-transparent">
                  <div class="text-white font-medium">{skill.name}</div>
                  <div class="text-white/50 text-sm">{skill.category}</div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <!-- Experience Section -->
    <section class="py-16 bg-gradient-to-b from-nightwalk-dark to-nightwalk-purple/30">
      <div class="section-container">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-2xl font-bold text-white mb-8">Experience</h2>
          <div class="space-y-8">
            {
              experience.map((job) => (
                <div class="relative pl-8 border-l-2 border-nightwalk-orange/30">
                  <div class="absolute left-[-9px] top-0 w-4 h-4 rounded-full bg-nightwalk-orange" aria-hidden="true"></div>
                  <div class="bg-white/5 rounded-lg p-6">
                    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-2">
                      <h3 class="text-xl font-bold text-white">{job.title}</h3>
                      <span class="text-white/50 text-sm">{job.period}</span>
                    </div>
                    <div class="text-nightwalk-orange mb-2">{job.company}</div>
                    <p class="text-white/70">{job.description}</p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-16 bg-nightwalk-purple">
      <div class="section-container">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-2xl font-bold text-white mb-4">Get in Touch</h2>
          <p class="text-white/70 mb-8 max-w-xl mx-auto">
            Interested in working together? Feel free to reach out.
          </p>
          <a
            href={`mailto:${siteConfig.author.email}`}
            class="inline-flex items-center gap-2 px-8 py-3 bg-white text-nightwalk-dark font-semibold rounded-lg hover:bg-white/90 transition-colors"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            {siteConfig.author.email}
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
