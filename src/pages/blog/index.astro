---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

// サンプル記事データ
const posts = [
  {
    slug: 'getting-started',
    title: 'Getting Started with Astro Skyline',
    excerpt: 'Learn how to set up and customize your Astro Skyline theme.',
    date: '2024-12-25',
    readTime: '5 min read',
  },
  {
    slug: 'customizing-the-cityscape',
    title: 'Customizing the Cityscape',
    excerpt: 'Adjust buildings, lighting, and atmosphere to match your vision.',
    date: '2024-12-20',
    readTime: '8 min read',
  },
  {
    slug: 'performance-tips',
    title: 'Performance Tips for Three.js',
    excerpt: 'Optimize your 3D scenes for better mobile performance.',
    date: '2024-12-15',
    readTime: '6 min read',
  },
];
---

<BaseLayout title="Blog - Astro Skyline">
  <Header />

  <main class="pt-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-skyline-dark to-skyline-purple py-20">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Blog</h1>
        <p class="text-xl text-white/80 max-w-2xl">
          Tips, tutorials, and updates about Astro Skyline.
        </p>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-16 bg-skyline-dark">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto space-y-8">
          {
            posts.map((post) => (
              <article class="bg-white/5 rounded-lg p-6 hover:bg-white/10 transition-colors">
                <a href={`/blog/${post.slug}`} class="block">
                  <div class="flex items-center gap-4 text-sm text-white/60 mb-3">
                    <time datetime={post.date}>
                      {new Date(post.date).toLocaleDateString('ja-JP', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                    <span>•</span>
                    <span>{post.readTime}</span>
                  </div>
                  <h2 class="text-xl font-bold text-white mb-2 hover:text-skyline-orange transition-colors">
                    {post.title}
                  </h2>
                  <p class="text-white/70">{post.excerpt}</p>
                </a>
              </article>
            ))
          }
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
