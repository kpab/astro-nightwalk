---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import PageHero from '../../components/PageHero.astro';
import { getCollection, render } from 'astro:content';
import { formatDateMonthOnly } from '../../utils/date';

export async function getStaticPaths() {
  const portfolio = await getCollection('portfolio');
  return portfolio.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await render(project);
---

<BaseLayout title={`${project.data.title} - Portfolio`} description={project.data.description}>
  <Header />

  <main class="pt-20">
    <PageHero backLink={{ href: '/portfolio', label: 'Back to Portfolio' }}>
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">{project.data.title}</h1>
      <p class="text-xl text-white/80 mb-6">{project.data.description}</p>

      <!-- Meta Info -->
      <div class="flex flex-wrap items-center gap-4 text-white/60 mb-6">
        <time datetime={project.data.date.toISOString()}>
          {formatDateMonthOnly(project.data.date, 'ja-JP')}
        </time>
        {project.data.tags.length > 0 && (
          <>
            <span>â€¢</span>
            <div class="flex gap-2">
              {project.data.tags.map((tag) => (
                <a
                  href={`/tags/${tag}`}
                  class="text-nightwalk-orange hover:underline"
                >
                  #{tag}
                </a>
              ))}
            </div>
          </>
        )}
      </div>

      <!-- Links -->
      <div class="flex flex-wrap gap-4">
        {project.data.url && (
          <a
            href={project.data.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-nightwalk-orange text-white font-semibold rounded-lg hover:bg-nightwalk-orange/90 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
            View Project
          </a>
        )}
        {project.data.github && (
          <a
            href={project.data.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 px-4 py-2 bg-white/10 text-white font-semibold rounded-lg hover:bg-white/20 transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            View Source
          </a>
        )}
      </div>
    </PageHero>

    <!-- Project Image -->
    <section class="bg-nightwalk-dark py-8">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="aspect-video bg-nightwalk-purple/30 rounded-xl overflow-hidden flex items-center justify-center">
            <svg class="w-24 h-24 text-white/20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
      </div>
    </section>

    <!-- Project Content -->
    <section class="py-16 bg-nightwalk-dark">
      <div class="container mx-auto px-4">
        <article class="max-w-4xl mx-auto prose prose-invert prose-lg">
          <Content />
        </article>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  @import '../../styles/article-styles.css';
</style>
