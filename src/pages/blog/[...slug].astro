---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout title={`${post.data.title} - Astro Nightwalk`} description={post.data.description}>
  <Header />

  <main class="pt-20">
    <!-- Article Header -->
    <section class="bg-gradient-to-b from-nightwalk-dark to-nightwalk-purple py-20">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <a
            href="/blog"
            class="inline-flex items-center gap-2 text-white/60 hover:text-white mb-6 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Blog
          </a>
          <h1 class="text-3xl md:text-4xl font-bold text-white mb-4">{post.data.title}</h1>
          <div class="flex flex-wrap items-center gap-4 text-white/60">
            <time datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString('ja-JP', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </time>
            {post.data.tags.length > 0 && (
              <>
                <span>â€¢</span>
                <div class="flex gap-2">
                  {post.data.tags.map((tag) => (
                    <a
                      href={`/tags/${tag}`}
                      class="text-nightwalk-orange hover:underline"
                    >
                      #{tag}
                    </a>
                  ))}
                </div>
              </>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- Article Content -->
    <section class="py-16 bg-nightwalk-dark">
      <div class="container mx-auto px-4">
        <article class="max-w-3xl mx-auto prose prose-invert prose-lg">
          <Content />
        </article>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  article :global(h2) {
    @apply text-2xl font-bold text-white mt-8 mb-4;
  }

  article :global(h3) {
    @apply text-xl font-bold text-white mt-6 mb-3;
  }

  article :global(p) {
    @apply text-white/80 mb-4;
  }

  article :global(pre) {
    @apply bg-white/10 rounded-lg p-4 overflow-x-auto mb-4;
  }

  article :global(code) {
    @apply text-nightwalk-orange;
  }

  article :global(pre code) {
    @apply text-white/90;
  }

  article :global(ul), article :global(ol) {
    @apply text-white/80 mb-4 pl-6;
  }

  article :global(li) {
    @apply mb-2;
  }

  article :global(a) {
    @apply text-nightwalk-orange hover:underline;
  }

  article :global(blockquote) {
    @apply border-l-4 border-nightwalk-orange pl-4 italic text-white/70;
  }
</style>
