---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { siteConfig } from '../../config/site.config';

// Content Collectionsからブログ記事を取得
const posts = await getCollection('posts', ({ data }) => {
  return data.draft !== true;
});

// 日付順でソート（新しい順）
posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

---

<BaseLayout title="Blog - Astro Nightwalk">
  <Header />

  <main id="main-content" class="pt-20">
    <!-- Hero Section -->
    <section class="bg-gradient-to-b from-nightwalk-dark to-nightwalk-purple py-20">
      <div class="section-container">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">{siteConfig.blog.title}</h1>
        <p class="text-xl text-white/80 max-w-2xl">
          {siteConfig.blog.description}
        </p>
      </div>
    </section>

    <!-- Blog Posts -->
    <section class="py-16 bg-nightwalk-dark">
      <div class="section-container">
        <div class="max-w-3xl mx-auto space-y-8">
          {
            posts.map((post) => (
              <article class="card-hover bg-white/5 rounded-lg p-6 border border-transparent">
                <a href={`/blog/${post.slug}`} class="block">
                  <div class="flex flex-wrap items-center gap-4 text-sm text-white/60 mb-3">
                    <time datetime={post.data.date.toISOString()}>
                      {post.data.date.toLocaleDateString('ja-JP', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric',
                      })}
                    </time>
                    {post.data.tags.length > 0 && (
                      <>
                        <span aria-hidden="true">•</span>
                        <div class="flex gap-2">
                          {post.data.tags.slice(0, 3).map((tag: string) => (
                            <span class="text-nightwalk-orange">#{tag}</span>
                          ))}
                        </div>
                      </>
                    )}
                  </div>
                  <h2 class="text-xl font-bold text-white mb-2 hover:text-nightwalk-orange transition-colors">
                    {post.data.title}
                  </h2>
                  <p class="text-white/70">{post.data.description}</p>
                </a>
              </article>
            ))
          }
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>
