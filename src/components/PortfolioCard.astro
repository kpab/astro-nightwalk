---
// ポートフォリオカードコンポーネント
interface Props {
  title: string;
  description: string;
  slug: string;
  image: string;
  tags: string[];
  featured?: boolean;
}

const { title, description, slug, image, tags, featured = false } = Astro.props;
---

<article class:list={[
  "group bg-white/5 rounded-xl overflow-hidden hover:bg-white/10 transition-all duration-300",
  featured && "ring-2 ring-nightwalk-orange/50"
]}>
  <a href={`/portfolio/${slug}`} class="block">
    <!-- Image Container -->
    <div class="relative aspect-video bg-nightwalk-purple/50 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-t from-nightwalk-dark/80 to-transparent z-10"></div>
      {featured && (
        <span class="absolute top-3 right-3 z-20 px-2 py-1 bg-nightwalk-orange text-white text-xs font-semibold rounded">
          Featured
        </span>
      )}
      <!-- Placeholder for image -->
      <div class="absolute inset-0 flex items-center justify-center text-white/30">
        <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
      </div>
    </div>

    <!-- Content -->
    <div class="p-5">
      <h3 class="text-lg font-bold text-white mb-2 group-hover:text-nightwalk-orange transition-colors">
        {title}
      </h3>
      <p class="text-white/70 text-sm mb-4 line-clamp-2">
        {description}
      </p>

      <!-- Tags -->
      <div class="flex flex-wrap gap-2">
        {tags.slice(0, 3).map((tag) => (
          <span class="text-xs px-2 py-1 bg-white/10 text-white/60 rounded">
            {tag}
          </span>
        ))}
        {tags.length > 3 && (
          <span class="text-xs px-2 py-1 text-white/40">
            +{tags.length - 3}
          </span>
        )}
      </div>
    </div>
  </a>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
